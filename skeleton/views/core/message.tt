[% DEFAULT level = 'info' %]
<div class="alert alert-[% level %]">
<button type="button" class="close" data-dismiss="alert">&times;</button>
[% IF level == 'info' %]
    <i class="icon-info-sign icon-large"></i> 
[% ELSIF level == 'success' %]
    <i class="icon-ok-sign icon-large"></i> 
[% ELSE %]
    <i class="icon-warning-sign icon-large"></i> 
[% END %]
[% msg %]
</div>
